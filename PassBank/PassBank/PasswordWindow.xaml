<Window x:Class="PassBank.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassBank"
        mc:Ignorable="d"
        Title="PasswordWindow" Height="240" Width="400"
        WindowStartupLocation="CenterScreen" MinWidth="400" MinHeight="240" MaxWidth="400" MaxHeight="240" ResizeMode="NoResize">
    <Grid Grid.Column="1">
        <Rectangle Fill="#FFF4F4F5" Stroke="Black"/>
        <Label Margin="10,10,0,0" Content="Senha:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" Height="40"/>
        <PasswordBox Margin="10,50,10,0" VerticalAlignment="Top" FontSize="24" Height="40" KeyDown="OnKeyDownHandler"/>
        <Grid Margin="10,100,10,0">
            <Grid HorizontalAlignment="Left">
                <Button x:Name="newButton" Content="Cancelar" Height="60" FontSize="24" Width="62" MinWidth="160" VerticalAlignment="Top" Click="CancelButton_Click"/>
            </Grid>
            <Grid HorizontalAlignment="Right">
                <Button x:Name="openButton" Content="Abrir" Height="60" FontSize="24" Grid.Column="1" MinWidth="160" VerticalAlignment="Top" Click="OpenButton_Click"/>
                
            </Grid>

        </Grid>
    </Grid>
</Window>
